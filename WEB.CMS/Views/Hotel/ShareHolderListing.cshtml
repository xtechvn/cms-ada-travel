@{
    Layout = null;
}

@using Entities.Models
@using Entities.ViewModels
@using Entities.ViewModels.Hotel
@using Utilities
@model GenericViewModel<HotelShareHolderGridModel>

<div class="table-responsive table-default table-gray">
    <table class="table table-nowrap">
        <thead>
            <tr>
                <th style="min-width: 30px;">STT</th>
                <th>Tên cổ đông</th>
                <th>SĐT</th>
                <th>Email</th>
                <th>% Cổ phần</th>
                <th>Ghi chú</th>
                <th>Người tạo</th>
                <th>Ngày tạo</th>
                <th style="min-width: 100px;">Tác vụ</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ListData != null && Model.ListData.Count > 0)
            {
                var counter = (Model.CurrentPage - 1) * Model.PageSize;

                foreach (var item in Model.ListData)
                {
                    counter++;
                    <tr>
                        <td>@counter</td>
                        <td>@item.FullName</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td class="share-percent"
                            data-value="@item.SharePercent"
                            data-id="@item.Id">
                            @item.SharePercent %
                        </td>


                        <td>@item.Note</td>
                        <td>@item.UserName</td>
                        <td>@item.CreateDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <a href="javascript:;" class="blue" title="Sửa"
                               onclick="hotel_shareholders.OnAddOrUpdate('@item.Id')">
                                <i class="fa fa-edit"></i>
                            </a>
                            &nbsp;&nbsp;
                            <a href="javascript:;" class="red" title="Xóa"
                               onclick="hotel_shareholders.Delete('@item.Id')">
                                <i class="fa fa-times"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center">
                        <div class="search-null center mt40 mb40">
                            <div class="mb24">
                                <img src="/images/graphics/icon-search.png" alt="">
                            </div>
                            <h2 class="title txt_24">Không có cổ đông</h2>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@await Component.InvokeAsync("Paging", new
    {
        pageModel = new Paging()
    {
        TotalRecord = Model.TotalRecord,
        TotalPage = Model.TotalPage,
        CurrentPage = Model.CurrentPage,
        PageSize = Model.PageSize,
        RecordName = "kết quả lọc",
        PageAction = "hotel_shareholders.Paging({0})"
    }
    })
