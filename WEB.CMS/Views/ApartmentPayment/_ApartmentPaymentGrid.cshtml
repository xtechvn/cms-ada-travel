@using Entities.ViewModels
@using Entities.Models
@model GenericViewModel<HotelShareHolderPaymentGridModel>

@if (Model.ListData == null || !Model.ListData.Any())
{
    <div class="search-null center mb40">
        <h2 class="title txt_24">Không có dữ liệu</h2>
    </div>
}
else
{
    var counter = (Model.CurrentPage - 1) * Model.PageSize;

    <div class="wrap_bg wrap_bg_no-padding mb20">
        <div class="table-responsive table-default table-gray">
            <table class="table table-nowrap">
                <thead>
                    <tr>
                        <th style="width:60px" class="text-center">STT</th>
                        <th>Tên cổ đông</th>
                        <th class="text-right">Số tiền chi</th>
                        <th class="text-center">Ngày chi</th>
                        <th>Ghi chú</th>
                        <th class="text-center" style="width:90px"></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.ListData)
                    {
                        counter++;
                        <tr>
                            <td class="text-center">@counter</td>

                            <td class="bold">
                                @item.ShareHolderName (@item.ShareHolderUserName)
                            </td>


                            <td class="text-right bold red">
                                @item.Amount.ToString("N0")
                            </td>

                            <td class="text-center">
                                @item.PayDate.ToString("dd/MM/yyyy")
                            </td>

                            <td>@item.Note</td>

                            <td class="text-center">
                                <a 
                                   class="red pointer bold">
                                   Xem Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @await Component.InvokeAsync("Paging", new
        {
            pageModel = new Paging()
    {
        TotalRecord = Model.TotalRecord,
        TotalPage = Model.TotalPage,
        CurrentPage = Model.CurrentPage,
        PageSize = Model.PageSize,
        RecordName = "phiếu chi",
        PageAction = "_apartment_payment.OnPaging({0})"
    }
        })
}
