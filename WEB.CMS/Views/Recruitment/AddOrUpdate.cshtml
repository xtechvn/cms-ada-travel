@{
    Layout = null;
}
@using Entities.Models
@using Entities.ViewModels
@model ArticleViewModel

<form id="form_menu">
    <div class="row row_min">
        <div class="grid-item col-md-12">
            <div class="form-default3 pd10">
                <div class="row row_min">
                    <div class="form-group col-12">
                        <label class="lbl">Tên Chủ Đề <sup class="red">*</sup></label>
                        <div class="wrap_input">
                            <input type="hidden" asp-for="@Model.Id" />
                            <input type="hidden" asp-for="@Model.AimodelType" value="1" />

                          
                            <input type="text" class="form-control" id="modal-CampaignName" asp-for="@Model.CampaignName" />
                        </div>
                    </div>
                  
                    <div class="form-group col-12">
                        <label class="lbl">Bạn muốn đăng nội dung này lên nền tảng nào?</label>
                        <div class="wrap_input">
                            <label class="radio">
                                <input type="radio" name="PlatForm" id="PlatForm_Web" asp-for="@Model.PlatForm" value="0" />
                                <span class="checkmark"></span>
                                Website
                            </label>
                            <label class="radio" style="margin: 0px 20px;">
                                <input type="radio" name="PlatForm" id="PlatForm_FB" asp-for="@Model.PlatForm" value="1" />
                                <span class="checkmark"></span>
                                Facebook
                            </label>
                            <label class="radio">
                                <input type="radio" name="PlatForm" id="PlatForm_Web2" asp-for="@Model.PlatForm" value="2" />
                                <span class="checkmark"></span>
                                Website2
                            </label>
                        </div>
                    </div>
                    <div class="form-group col-12">
                        <label class="lbl">Content</label>
                        <div class="wrap_input">
                            <input type="text" class="form-control" id="modal-AiContent" asp-for="@Model.AiContent" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<div id="loadingOverlay" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(255,255,255,0.8); z-index:9999; text-align:center;">
    <div style="position:absolute; top:50%; left:50%; transform:translate(-50%,-50%);">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <p style="margin-top:10px;">Đang gửi dữ liệu lên AI...</p>
    </div>
</div>

<div class="text-right">
    <button type="button" class="btn btn-default btn btn-default cancel" data-dismiss="modal">Bỏ qua</button>
    <button type="button" class="btn btn-default" onclick="_news.OnSave()">@(Model.Id > 0 ? "Cập nhật AI" : "Tạo bài AI")</button>
</div>

@section scripts {
    <script src="~/modules/news_detail.js?v=8"></script>
}