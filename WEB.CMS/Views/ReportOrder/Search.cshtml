@using Utilities
@using Utilities.Contants
@using Entities.ViewModels
@using Entities.ViewModels.CustomerManager
@model GenericViewModel<ReportOrderViewModel>

@if (Model == null)
{
    <div class="search-null center mb40">
        <div class="mb24">
            <img src="/images/graphics/icon-search.png" alt="">
        </div>
        <h2 class="title txt_24">Không tìm thấy kết quả</h2>
        <div class="gray">Chúng tôi không tìm thấy thông tin mà bạn cần, vui lòng thử lại</div>
    </div>
}
else
{
    <div class="wrap_bg wrap_bg_no-padding mb20">
        <div class="table-responsive table-default table-gray wrap_bg wrap_bg_no-padding">
            <table class="table table-nowrap">
                <thead>
                    <tr>
                        <th style="width: 40px;">STT</th>
                        <th>Mã đơn hàng</th>
                        <th>Dịch vụ</th>
                        <th>Mã dịch vụ</th>
                        <th>Mã yêu cầu chi</th>
                        <th>Số tiền</th>



                        @*<th class="mfp-hide" style="width: 100px;">Trạng thái tài khoản</th>*@
                    </tr>
                </thead>

                <tbody>

                    @if (Model.ListData != null && Model.ListData.Count > 0)
                    {

                        var STT = (Model.CurrentPage - 1) * Model.PageSize;
                        @foreach (var item in Model.ListData)
                        {
                            STT++;
                            <tr>
                                <td rowspan="@item.CountService">@STT</td>
                                <td rowspan="@item.CountService"><a class="blue" href="/Order/@item.OrderId">@item.OrderNo</a> </td>

                            </tr>

                            @if (item.ListService != null && item.ListService.Count > 0)
                            {
                                @foreach (var Service in item.ListService)
                                {
                                    <tr>

                                        <td rowspan="@Service.CountPaymentRequest">@Service.Type</td>
                                        <td rowspan="@Service.CountPaymentRequest">@Service.ServiceCode</td>


                                    </tr>

                                    @if (Service.ListPaymentRequest != null && Service.ListPaymentRequest.Count > 0)
                                    {
                                        @foreach (var PaymentRequest in Service.ListPaymentRequest)
                                        {
                                            <tr>

                                                <td>
                                                    <a class="blue" href="/PaymentRequest/Detail?paymentRequestId=@PaymentRequest.Id">
                                                        @PaymentRequest.PaymentCode
                                                    </a>
                                                </td>
                                                <td>@PaymentRequest.Amount.ToString("N0")</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    }


                                }
                            }
                            else
                            {
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            }

                        }

                    }
                </tbody>
            </table>
        </div>

        <input id="countClient" value="@Model.TotalRecord" style="display:none" />
        @await Component.InvokeAsync("PagingNew", new
            {

                pageModel = new Paging()
    {
        TotalRecord = Model.TotalRecord,
        TotalPage = Model.TotalPage,
        CurrentPage = Model.CurrentPage,
        PageSize = Model.PageSize,
        RecordName = "đơn hàng",
        PageAction = "_report_order.ClientOnPaging({0})",
        PageSelectPageSize = "_report_order.onSelectPageSize()"
    }
            })
    </div>
}