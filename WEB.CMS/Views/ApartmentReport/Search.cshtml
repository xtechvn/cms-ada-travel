@using Entities.Models
@using Entities.ViewModels
@using Entities.ViewModels.Report
@model GenericViewModel<ReportHotelShareHolderViewModel>

@if (Model.ListData == null || Model.ListData.Count <= 0)
{
    <div class="search-null center mb40">
        <h2 class="title txt_24">Không có dữ liệu</h2>
    </div>
}
else
{
    var totalProfitByShare = Model.ListData.Sum(x => x.TotalProfitByPercent);
    var totalPaid = Model.ListData.Sum(x => x.TotalPaid);
    var totalRemain = Model.ListData.Sum(x => x.RemainToPay);

    <div class="wrap_bg wrap_bg_no-padding mb20">
        <div class="table-responsive table-default table-gray">
            <table class="table table-nowrap">
                <thead>
                    <tr>
                        <th style="width:60px">STT</th>
                        <th>Tên cổ đông</th>
                       
                        <th class="text-right">Tổng LN theo %</th>
                        <th class="text-right">Tổng tiền đã chi trả cổ đông</th>
                        <th class="text-right">Còn phải trả</th>
                        <th class="text-right">Còn phải trả</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        var counter = (Model.CurrentPage - 1) * Model.PageSize;
                    }

                    @foreach (var item in Model.ListData)
                    {
                        counter++;
                        <tr>
                            <td class="text-center">@counter</td>
                            <td class="bold">@item.FullName</td>
                            
                            <td class="text-right">
                                @item.TotalProfitByPercent.ToString("N0")
                            </td>
                            <td class="text-right">
                                @item.TotalPaid.ToString("N0")
                            </td>
                            <td class="text-right bold red">
                                @item.RemainToPay.ToString("N0")
                            </td>
                            <td class="text-right ">
                                <a class="red pointer bold"
                                   onclick="_report_shareholder.OpenDetail(
                                            @item.ShareHolderId,
                                            '@item.FullName'
                                       )">
                                    Xem Chi tiết
                                </a>

                            </td>
                        </tr>
                    }

                    <!-- ✅ DÒNG TỔNG CUỐI CANH ĐÚNG CỘT -->
                    <tr class="no-border">
                        <td></td>
                        <td class="text-right bold">Tổng cộng</td>
                        <td class="text-right bold red">
                            @totalProfitByShare.ToString("N0")
                        </td>
                        <td class="text-right bold">
                            @totalPaid.ToString("N0")
                        </td>
                        <td class="text-right bold red">
                            @totalRemain.ToString("N0")
                        </td>
                        <td></td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
}

@await Component.InvokeAsync("Paging", new
    {
        pageModel = new Paging()
    {
        TotalRecord = Model.TotalRecord,
        TotalPage = Model.TotalPage,
        CurrentPage = Model.CurrentPage,
        PageSize = Model.PageSize,
        RecordName = "kết quả",
        PageAction = "_report_shareholder.OnPaging({0})"
    }
    })
