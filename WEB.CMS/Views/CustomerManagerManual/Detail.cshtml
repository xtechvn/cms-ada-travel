@{ ViewData["Title"] = "Chi tiết khách hàng"; }



<section class="main-container main-customer">
    <div class="row-main container">


        <div class="row">
            <div class="col-lg-3">
                <h4 class="mb-3">Thông tin khách hàng</h4>
                <input id="id_userid" style="display:none" value="@ViewBag.id"></input>
                <div id="grid_detail_Customer_Manager" class="client-list-wrapper">
                    <img src="/images/icons/loading.gif" style=" width: 100px; height: 100px; margin-left:46%;" id="imgLoading_Customer_Manager" />
                </div>

            </div>
            <div class="col-lg-9 ">
                <div class="line-bottom" style="padding-bottom: 0;">
                    <div class="flex flex-lg-nowrap gap10 justify-content-between align-items-center">
                        <div class="tab-default mb0">
                            <a href="javascript:;" onclick="_customer_manager_Detail.OnStatuse(5);_customer_manager_Detail.SetActive(5)" id="note_kh" class="active">Ghi chú về khách</a>
                            <a href="javascript:;" onclick="_customer_manager_Detail.OnStatuse(1);_customer_manager_Detail.SetActive(1)" id="data_order" >Lịch sử mua hàng</a>
                            <a href="javascript:;" onclick="_customer_manager_Detail.OnStatuse(3);_customer_manager_Detail.SetActive(3)" id="data_deposit_history">Lịch sử ký quỹ</a>
                            <a href="javascript:;" onclick="_customer_manager_Detail.OnStatuse(4);_customer_manager_Detail.SetActive(4)" id="data_Contract">Lịch sử hợp đồng</a>
                            <a href="javascript:;" onclick="_customer_manager_Detail.OnStatuse(2);_customer_manager_Detail.SetActive(2)" id="data_payment_account">Thông tin thanh toán</a>
                            <div id="bt_data_payment_account" style="display:none">
                                <button type="button" class="btn btn-default bg-main mb10 mr-2" onclick="_customer_manager_Detail.OpenPopupPaymentAccount('')"><i class="fa fa-plus-circle"></i>Thêm thông tin thanh toán</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-responsive table-default">
                    <div>
                        <div id="grid_data">
                            <img src="/images/icons/loading.gif" style=" width: 100px; height: 100px; margin-left:46%;" id="imgLoading_order" />
                        </div>
                        @*Lịch sử mua hàng*@
                        <!--<input id="id_userid" style="display:none" value="@ViewBag.id"></input>

                        <div id="grid_data_order">
                            <img src="/images/icons/loading.gif" style=" width: 100px; height: 100px; margin-left:46%;" id="imgLoading_order" />
                        </div>-->
                        @*Thông tin thanh toán*@

                        <!--<div id="grid_data_payment_account" style="display:none">
                            <img src="/images/icons/loading.gif" style=" width: 100px; height: 100px; margin-left:46%;" id="imgLoading_payment_account(" />
                        </div>-->

                        @*lịch sử ký quỹ*@


                        <!--<div id="grid_data_deposit_history" style="display:none">
                            <img src="/images/icons/loading.gif" style=" width: 100px; height: 100px; margin-left:46%;" id="imgLoading_deposit_history" />
                        </div>-->


                        @*lịch sử hợp đồng*@


                        <!--<div id="grid_data_Contract" style="display:none">
                            <img src="/images/icons/loading.gif" style=" width: 100px; height: 100px; margin-left:46%;" id="imgLoading_Contract" />
                        </div>-->
                    </div>
                </div>
                <div class="mt-3">
                    <div class="flex flex-end">
                        <b class="btn btn-default cancel ml-1" onclick="history.back()">Quay lại</b>
                        <button type="button" class="btn btn-default ml-1" onclick="_customer_manager.OpenPopup('@ViewBag.id')">Sửa thông tin khách hàng</button>
                        <button type="button" class="btn btn-default ml-1" onclick="_customer_manager_Detail.PopUpClientStatus('@ViewBag.id')">Cập nhật trạng thái khách hàng</button>
                        <button type="button" class="btn btn-default ml-1" onclick="_customer_manager_Detail.OpenPopupUserAgent('')">Đổi nhân viên phụ trách</button>
                        @if (ViewBag.btnStatus == 1)
                        {
                            <button type="button" class="btn btn-default ml-1" onclick="_customer_manager_Detail.SendMailResetPasswordb2b(@ViewBag.id)">Gửi email tài khoản</button>
                        }
                    </div>
                </div>

            </div>
        </div>

    </div>
</section>


@section scripts {
    <script asp-append-version="true" type="text/javascript" src="/modules/customer_manager_DetailV2.js"></script>
    <script type="text/javascript" src="/modules/customer_manager.js"></script>
    <link href="~/css/icofont/icofont.css" rel="stylesheet" />
    <link href="~/css/icofont/icofont.min.css" rel="stylesheet" />
}
<style>
    .client-list-wrapper {
        max-height: 729px; /* Giới hạn chiều cao của danh sách comment */
        overflow-y: auto; /* Bật thanh cuộn dọc */
    }

        .client-list-wrapper::-webkit-scrollbar {
            width: 8px;
        }

        .client-list-wrapper::-webkit-scrollbar-thumb {
            background-color: #ccc;
            border-radius: 4px;
        }

            .client-list-wrapper::-webkit-scrollbar-thumb:hover {
                background-color: #aaa;
            }

        .client-list-wrapper::-webkit-scrollbar-track {
            background-color: #f1f1f1;
        }


