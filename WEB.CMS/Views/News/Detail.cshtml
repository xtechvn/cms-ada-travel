        display: inline-block;
        margin: 5px 2px 5px 0px;
        color: #000;
        background: #D9D9D9;
        padding: 5px 5px 5px 10px;
    }

    .bootstrap-tagsinput {
        width: 100%;
    }

    .user-hierarchy-tag ul .lever2 {
        padding-left: 15px;
    }

    .loading {
        position: absolute;
        z-index: 1;
        width: 100%;
        height: 100%;
        display: none;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.479);
    }

